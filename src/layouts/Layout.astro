---
// Component Imports
import '../styles/global.css'
import { SendToAttractScreen } from '../components/SendToAttractScreen'
import DinosaurFootprintViewer from '@/components/dinosaur-footprint-viewer'
import type { contentData } from '@/data/contentData'
interface Props {
    title: string
}

const { title } = Astro.props
const { pathname } = new URL(Astro.request.url)
---

<html lang="en" title={title}>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <style>
            html,
            body {
                font-family: system-ui;
                margin: 0;
            }
        </style>
    </head>
    <body>
        <main>
            <SendToAttractScreen />
            <DinosaurFootprintViewer
                selectedFootprint={pathname === '/'
                    ? 'sauropod'
                    : (pathname.slice(1) as keyof typeof contentData)}
                client:visible
            />
            <slot />
        </main>
    </body>
</html>
